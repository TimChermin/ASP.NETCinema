@model IEnumerable<ASPNETCinema.ViewModels.ScreeningViewModel>

@{
    ViewData["Title"] = "ListScreenings";
}

<h2>ListScreenings</h2>

@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="AddScreening">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfScreening)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfScreening)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfScreening)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfScreening)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {

                @Html.ActionLink("Edit", "EditScreening", new { item.Id }) 
                @Html.ActionLink("Delete", "DeleteScreening", new { item.Id })

                }
                @Html.ActionLink("Details", "DetailsScreening", new { item.Id })
            </td>
        </tr>
        }




    </tbody>
</table>
