@model ASPNETCinema.ViewModels.UserViewModel

@{
    ViewData["Title"] = "LoginUser";
}

<h2>Login</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="text-danger">@ViewBag.Test</div>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


<div>
    <p>@Html.ActionLink("Back to List", "ListMovies", "Movie")</p>
    <p>@Html.ActionLink("Register", "AddUser", "User")</p>
</div>

