@model IEnumerable<ASPNETCinema.Models.MovieModel>

@{
    ViewData["Title"] = "ListMovies";

}
<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
<h2>Movies</h2>
<a asp-action="AddMovie">Add New Movie</a>


<form asp-action="ListMovies">
    <input name="OrderBy" type="submit" id="submit" value="Name" />
    <input name="OrderBy" type="submit" id="process" value="MovieType" />
    <input name="OrderBy" type="submit" id="process" value="ReleaseDate" />
    <input name="OrderBy" type="submit" id="process" value="MoviesToday" />

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastScreeningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieLenght)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImageString)" alt="Image: @Html.DisplayFor(modelItem => item.Name)" width="120" height="160">
                <p>@Html.DisplayFor(modelItem => item.Name)</p>
                <!--<img src="https://www.w3schools.com/images/w3schools_green.jpg" alt="W3Schools.com">-->
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastScreeningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieLenght)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditMovie", new { id = item.ID }) |
                @Html.ActionLink("Details", "DetailsMovie", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeleteMovie", new { id = item.ID })
            </td>
        </tr>
        }
    </tbody>
</table>
