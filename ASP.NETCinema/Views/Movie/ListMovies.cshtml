@model IEnumerable<ASPNETCinema.Models.MovieModel>

@{
    ViewData["Title"] = "ListMovies";
}

<h2>ListMovies</h2>

<p>
    <a asp-action="AddMovie">Add New Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastScreeningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastScreeningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieType)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditMovie", new { id=item.ID }) |
                @Html.ActionLink("Details", "DetailsMovie", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "DeleteMovie", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
