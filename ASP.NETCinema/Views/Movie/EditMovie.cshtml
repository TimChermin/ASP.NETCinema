@model ASPNETCinema.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "EditMovie";
}

<h2>Edit Movie</h2>

<h4>@Html.DisplayFor(model => model.Name)</h4>
<img src="@Html.DisplayFor(model=> model.ImageString)" alt="Image: @Html.DisplayFor(model=> model.ImageString)" width="200" height="260">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastScreeningDate" class="control-label"></label>
                <input asp-for="LastScreeningDate" class="form-control" />
                <span asp-validation-for="LastScreeningDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieType" class="control-label"></label>
                <input asp-for="MovieType" class="form-control" />
                <span asp-validation-for="MovieType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieLenght" class="control-label"></label>
                <input asp-for="MovieLenght" class="form-control" />
                <span asp-validation-for="MovieLenght" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageString" class="control-label"></label>
                <input asp-for="ImageString" class="form-control" />
                <span asp-validation-for="ImageString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BannerImageString" class="control-label"></label>
                <input asp-for="BannerImageString" class="form-control" />
                <span asp-validation-for="BannerImageString" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="ListMovies">Back to List</a>
            </div>
        </form>
    </div>
</div>
        

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
