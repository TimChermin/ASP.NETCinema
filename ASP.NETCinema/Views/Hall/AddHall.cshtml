@model ASPNETCinema.ViewModels.HallViewModel

@{
    ViewData["Title"] = "AddHall";
}

<h2>AddHall</h2>

<h4>HallModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHall">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenType" class="control-label"></label>
                <select name="ScreenType" class="form-control">
                    <option value="3DIMAX">3DIMAX</option>
                    <option value="3D">3D</option>
                    <option value="4D">4D</option>
                    <option value="Normal" selected>Normal</option>
                    <option value="IMAX">IMAX</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListHalls">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
